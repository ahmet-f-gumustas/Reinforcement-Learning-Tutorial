<mujoco model="simple_quadruped">
  <!--
    Ozel Dort Bacakli Robot Modeli / Custom Quadruped Robot Model

    Bu model, gercek bir kopek benzeri dort bacakli robotu tanimlar.
    Ant-v5'ten farklari:
    - Dikdortgen govde (Ant'in kuresel govdesi yerine)
    - Bacaklar asagi dogru uzanir (Ant'in yatay bacaklari yerine)
    - Her bacakta 2 eklem: kalca (hip) + diz (knee)
    - Toplam 8 actuator (Ant ile ayni)

    This model defines a dog-like quadruped robot.
    Differences from Ant-v5:
    - Rectangular torso (instead of Ant's spherical torso)
    - Legs extend downward (instead of Ant's horizontal legs)
    - 2 joints per leg: hip + knee
    - 8 actuators total (same as Ant)
  -->

  <!-- Derleyici ayarlari / Compiler settings -->
  <compiler angle="degree" coordinate="local" inertiafromgeom="true"/>
  <option integrator="RK4" timestep="0.01"/>

  <!-- Varsayilan eklem/geom ayarlari / Default joint/geom settings -->
  <default>
    <joint armature="1" damping="1" limited="true"/>
    <geom conaffinity="0" condim="3" density="5.0" friction="1.0 0.5 0.5"
          margin="0.01" rgba="0.2 0.6 0.8 1"/>
  </default>

  <!-- Gorseller / Visual assets -->
  <asset>
    <texture builtin="gradient" height="100" rgb1="0.6 0.8 1.0" rgb2="0.1 0.1 0.3"
             type="skybox" width="100"/>
    <texture builtin="checker" height="100" name="texplane"
             rgb1="0.1 0.2 0.3" rgb2="0.8 0.85 0.9" type="2d" width="100"/>
    <material name="MatPlane" reflectance="0.5" shininess="1"
              specular="1" texrepeat="60 60" texture="texplane"/>
  </asset>

  <worldbody>
    <!-- Isik ve zemin / Light and ground -->
    <light cutoff="100" diffuse="1 1 1" dir="0 0 -1.3"
           directional="true" pos="0 0 1.3" specular=".1 .1 .1"/>
    <geom conaffinity="1" condim="3" material="MatPlane" name="floor"
          pos="0 0 0" size="40 40 40" type="plane" rgba="0.8 0.9 0.8 1"/>

    <!-- ============================================ -->
    <!-- Ana Govde / Main Torso Body                  -->
    <!-- ============================================ -->
    <body name="torso" pos="0 0 0.5">
      <camera name="track" mode="trackcom" pos="0 -3 0.5" xyaxes="1 0 0 0 0 1"/>
      <joint name="root" type="free" armature="0" damping="0" limited="false"/>

      <!-- Dikdortgen govde / Rectangular torso -->
      <geom name="torso_geom" type="box" size="0.2 0.1 0.05"
            pos="0 0 0" rgba="0.3 0.5 0.8 1"/>

      <!-- ============================================ -->
      <!-- ON SOL BACAK / FRONT LEFT LEG                -->
      <!-- ============================================ -->
      <body name="front_left_hip" pos="0.15 0.1 0">
        <!-- Kalca eklemi (on-arka) / Hip joint (forward-backward) -->
        <joint name="fl_hip" type="hinge" axis="0 1 0"
               range="-30 30" pos="0 0 0"/>
        <geom name="fl_upper_leg" type="capsule"
              fromto="0 0 0 0 0 -0.15" size="0.04"
              rgba="0.4 0.6 0.9 1"/>

        <body name="front_left_knee" pos="0 0 -0.15">
          <!-- Diz eklemi / Knee joint -->
          <joint name="fl_knee" type="hinge" axis="0 1 0"
                 range="-60 0" pos="0 0 0"/>
          <geom name="fl_lower_leg" type="capsule"
                fromto="0 0 0 0 0 -0.15" size="0.035"
                rgba="0.3 0.5 0.85 1"/>
        </body>
      </body>

      <!-- ============================================ -->
      <!-- ON SAG BACAK / FRONT RIGHT LEG               -->
      <!-- ============================================ -->
      <body name="front_right_hip" pos="0.15 -0.1 0">
        <joint name="fr_hip" type="hinge" axis="0 1 0"
               range="-30 30" pos="0 0 0"/>
        <geom name="fr_upper_leg" type="capsule"
              fromto="0 0 0 0 0 -0.15" size="0.04"
              rgba="0.4 0.6 0.9 1"/>

        <body name="front_right_knee" pos="0 0 -0.15">
          <joint name="fr_knee" type="hinge" axis="0 1 0"
                 range="-60 0" pos="0 0 0"/>
          <geom name="fr_lower_leg" type="capsule"
                fromto="0 0 0 0 0 -0.15" size="0.035"
                rgba="0.3 0.5 0.85 1"/>
        </body>
      </body>

      <!-- ============================================ -->
      <!-- ARKA SOL BACAK / BACK LEFT LEG               -->
      <!-- ============================================ -->
      <body name="back_left_hip" pos="-0.15 0.1 0">
        <joint name="bl_hip" type="hinge" axis="0 1 0"
               range="-30 30" pos="0 0 0"/>
        <geom name="bl_upper_leg" type="capsule"
              fromto="0 0 0 0 0 -0.15" size="0.04"
              rgba="0.4 0.6 0.9 1"/>

        <body name="back_left_knee" pos="0 0 -0.15">
          <joint name="bl_knee" type="hinge" axis="0 1 0"
                 range="-60 0" pos="0 0 0"/>
          <geom name="bl_lower_leg" type="capsule"
                fromto="0 0 0 0 0 -0.15" size="0.035"
                rgba="0.3 0.5 0.85 1"/>
        </body>
      </body>

      <!-- ============================================ -->
      <!-- ARKA SAG BACAK / BACK RIGHT LEG              -->
      <!-- ============================================ -->
      <body name="back_right_hip" pos="-0.15 -0.1 0">
        <joint name="br_hip" type="hinge" axis="0 1 0"
               range="-30 30" pos="0 0 0"/>
        <geom name="br_upper_leg" type="capsule"
              fromto="0 0 0 0 0 -0.15" size="0.04"
              rgba="0.4 0.6 0.9 1"/>

        <body name="back_right_knee" pos="0 0 -0.15">
          <joint name="br_knee" type="hinge" axis="0 1 0"
                 range="-60 0" pos="0 0 0"/>
          <geom name="br_lower_leg" type="capsule"
                fromto="0 0 0 0 0 -0.15" size="0.035"
                rgba="0.3 0.5 0.85 1"/>
        </body>
      </body>
    </body>
  </worldbody>

  <!-- ============================================ -->
  <!-- Motorlar / Actuators                         -->
  <!-- 8 motor: her bacakta 1 kalca + 1 diz         -->
  <!-- 8 motors: 1 hip + 1 knee per leg              -->
  <!-- ============================================ -->
  <actuator>
    <!-- On Sol / Front Left -->
    <motor name="fl_hip_motor"  joint="fl_hip"  gear="150"
           ctrllimited="true" ctrlrange="-1.0 1.0"/>
    <motor name="fl_knee_motor" joint="fl_knee" gear="150"
           ctrllimited="true" ctrlrange="-1.0 1.0"/>
    <!-- On Sag / Front Right -->
    <motor name="fr_hip_motor"  joint="fr_hip"  gear="150"
           ctrllimited="true" ctrlrange="-1.0 1.0"/>
    <motor name="fr_knee_motor" joint="fr_knee" gear="150"
           ctrllimited="true" ctrlrange="-1.0 1.0"/>
    <!-- Arka Sol / Back Left -->
    <motor name="bl_hip_motor"  joint="bl_hip"  gear="150"
           ctrllimited="true" ctrlrange="-1.0 1.0"/>
    <motor name="bl_knee_motor" joint="bl_knee" gear="150"
           ctrllimited="true" ctrlrange="-1.0 1.0"/>
    <!-- Arka Sag / Back Right -->
    <motor name="br_hip_motor"  joint="br_hip"  gear="150"
           ctrllimited="true" ctrlrange="-1.0 1.0"/>
    <motor name="br_knee_motor" joint="br_knee" gear="150"
           ctrllimited="true" ctrlrange="-1.0 1.0"/>
  </actuator>
</mujoco>
